{% include "partials/base.html.twig" %}

{% block body %}
<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-md-8 col-lg-6">
			<div class="card shadow-sm border-0">
				<div class="card-body p-5">
					<h2 class="card-title text-center mb-4 text-primary font-weight-bold">Créer un portefeuille</h2>
					{{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}

					<div class="form-group mb-3">
						{{ form_label(form.fullName, 'Nom complet', {'label_attr': {'class': 'form-label font-weight-bold'}}) }}
						{{ form_widget(form.fullName, {'attr': {'class': 'form-control', 'placeholder': 'Nom complet'}}) }}
						{{ form_errors(form.fullName, {'attr': {'class': 'form-error text-danger'}}) }}
					</div>

					<div class="form-group mb-3">
						{{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label font-weight-bold'}}) }}
						{{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
						{{ form_errors(form.email, {'attr': {'class': 'form-error text-danger'}}) }}
					</div>

					<div class="form-group mb-3">
						{{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'form-label font-weight-bold'}}) }}
						{{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
						{{ form_errors(form.password, {'attr': {'class': 'form-error text-danger'}}) }}
					</div>

					<div class="form-group mb-3">
						{{ form_label(form.phoneNumber, 'Numéro de téléphone', {'label_attr': {'class': 'form-label font-weight-bold'}}) }}
						{{ form_widget(form.phoneNumber, {'attr': {'class': 'form-control', 'placeholder': 'Numéro de téléphone'}}) }}
						{{ form_errors(form.phoneNumber, {'attr': {'class': 'form-error text-danger'}}) }}
					</div>

					<div class="form-group mb-3">
						{{ form_label(form.downloadURL, 'Photo d\'identité', {'label_attr': {'class': 'form-label font-weight-bold'}}) }}
                            {{ form_widget(form.downloadURL, {'attr': {'class': 'form-control-file'}}) }}
                            {{ form_errors(form.downloadURL, {'attr': {'class': 'form-error text-danger'}}) }}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.userType, 'Type de portefeuille', {'label_attr': {'class': 'form-label font-weight-bold'}}) }}
                            {{ form_widget(form.userType, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.userType, {'attr': {'class': 'form-error text-danger'}}) }}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.numCompte, 'Numéro de compte', {'label_attr': {'class': 'form-label font-weight-bold'}}) }}
                            {{ form_widget(form.numCompte, {'attr': {'class': 'form-control', 'placeholder': 'Numéro de compte'}}) }}
                            {{ form_errors(form.numCompte, {'attr': {'class': 'form-error text-danger'}}) }}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.solde, 'Solde actuel', {'label_attr': {'class': 'form-label font-weight-bold'}}) }}
                            {{ form_widget(form.solde, {'attr': {'class': 'form-control', 'placeholder': 'Solde actuel'}}) }}
                            {{ form_errors(form.solde, {'attr': {'class': 'form-error text-danger'}}) }}
                        </div>

                        <button type="submit" class="btn btn-primary btn-block mt-4">Créer</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
